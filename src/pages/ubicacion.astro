---
import Layout from "../layouts/Layout.astro";
---


<Layout title="Ubicación">
    <main>
        <section>
			<img src="/mapa.webp" alt="mapa de la ubicación de la vivienda">

			

        </section>
    </main>
</Layout>



<style>
	main {
		margin: 0;
		padding: 0;
		width: 100%;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin: 0;
		padding: 0;
	}
	section{
		height: calc(100vh - 48px);
		margin: 24px;
		border-radius: 12px;
		background-position: 50% 70%;
	}
	img{
		height: 100%;
		border-radius: 12px;
	}


</style>

---
import Layout from "../layouts/Layout.astro";
---


<Layout title="Visita Virtual C">
    <main>
		<div class="tabs">
			<button class="tab-button" onclick="window.location.href='/visitavirtual-f'">2ยบ F</button>
            <button class="tab-button" onclick="window.location.href='/visitavirtual-g'">2ยบ G</button>
            <button class="tab-button" onclick="window.location.href='/visitavirtual-c'">1ยบ C</button>
            <button class="tab-button selected">2ยบ H</button>

        </div>
        <section>
            <iframe allow="xr-spatial-tracking"  src="https://3d.kotekvirtual.es/riosar-tipoh/" height="100%" width="100%" frameborder="0"></iframe>
        </section>
    </main>
</Layout>



<style>
	body{
		overflow: hidden;
	}
	main {
		margin: 0;
		padding: 0;
		width: 100%;
	}
	
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin: 0;
		padding: 0;
	}
	.tabs {
        display: flex;
        justify-content: center;
        margin-bottom: 16px;
    }
    .tab-button {
        padding: 12px 24px;
        border: none;
        background-color: hsl(240, 15%, 27%);
        color: hsl(240, 15%, 97%);
        cursor: pointer;
        font-size: 16px;
        border-radius: 4px;
        margin: 4px 1px;
        transition: background-color 0.3s;
    }
    .tab-button.selected {
        background-color: hsl(230, 100%, 69%);
    }
    .tab-button:hover {
        background-color: hsl(230, 100%, 75%);
    }
	section{
		background-color: #F2F2F2;
		height: calc(100vh - 88px);
		margin: 24px;
		border-radius: 12px;
		background-position: 50% 70%;
	}
	iframe{
		border-radius: 12px;
	}
	@media (orientation: portrait) {
		main{
			height: calc(100dvh - 80px);
			overflow: hidden;
			padding: 0;
		}
		section{
			height: 100%;
			margin: 0;

		}
	}
</style>

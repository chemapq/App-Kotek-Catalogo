<style>
    body {
        overflow: hidden;
    	padding: 0px;
    	width: 100%;
    	margin: 0 auto;		
    }
    main {
        margin: 0 auto;
        padding: 0;
        width: 100%;
		padding: 20px;
    }
    /*h1 {
        font-size: 3rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin: 0;
        padding: 0;
    }*/
    section {
        height: calc(100vh - 48px);
        margin: 24px;
        border-radius: 12px;
        background-position: 50% 70%;
        overflow: auto;
        overflow-x: hidden;
    }
    .boton-ficha {
        width: 300px;
        border: 0px solid hsl(240, 15%, 97%);
        border-radius: 12px;
        cursor: pointer;
        transition: opacity 0.3s ease;
    }

    .boton-ficha.hidden {
        display: none;
    }

    .grid-fichas {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 24px;
        justify-items: center;
        padding: 24px;
        align-content: start;
    }
    dialog {
        max-height: 90vh;
		max-width: 90vw;
		aspect-ratio: 1;
		overflow: hidden;
        border: none;
		padding: 0;
		background-color: transparent;
    }
    dialog::backdrop {
        background-color: #26263399;
    }
    .modalImage {
        height: 100%;
		width: 100%;
        margin: 0px;
        border: none;
    }
	#botonK{
		margin-bottom: 180px;
	}
    .closeButton {
        position: fixed;
        top: 8px;
        right: 8px;
        height: 48px;
        width: 48px;
        outline: none;
        background-color: hsl(240, 15%, 27%);
        color: hsl(240, 15%, 97%);
        cursor: pointer;
        font-size: 16pt;
        border: 2px hsl(240, 15%, 27%) solid;
        border-radius: 250px;
        text-align: center;
        padding: 0;
    }

	.header-title{
	    font-size: 2rem;
	    font-weight: 700;
	    color: white;
	    margin: 0 0 0px 0;
	    padding: 0;
	    text-align: center;        
	}	

	.page-header {
	    margin-bottom: 20px;
	    text-align: center;
	    max-width: 1400px;
	    margin-left: auto;
	    margin-right: auto;
	}

	.filter-tabs {
	    display: flex;
	    gap: 8px;
	    justify-content: center;
	}

	.filter-tab {
	    padding: 12px 24px;
	    border: none;
	    border-radius: 8px;
	    background-color: hsl(240, 15%, 30%);
	    color: white;
	    font-size: 0.95rem;
	    font-weight: 500;
	    cursor: pointer;
	    transition: all 0.3s ease;
	}

	.filter-tab:hover {
	    background-color: hsl(240, 15%, 35%);
	}

	.filter-tab.active {
	    background-color: hsl(230, 100%, 69%);
	    color: white;
	}	

    @media (orientation: portrait) {
    	main {
    	    height: calc(100dvh - 80px);
    	    overflow: auto;
    	    padding: 0;
    	}
        dialog {
            width: 90dvw;
        }
        .modalImage {
			max-width: 100%;
			height: auto;
        }
        section {

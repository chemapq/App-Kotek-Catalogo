<style>
body {
    overflow: hidden;
}

main {
    overflow: auto;
    flex: 1;
    background-color: hsl(240, 15%, 17%);
    padding: 20px;
    width: 100%;
    margin: 0 auto;
}

.header-title{
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0px 0;
    padding: 0;
    text-align: center;        
}

.content-container {
    padding: 40px;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
}

.page-header {
    margin-bottom: 10px;
    text-align: center;
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
}

.filter-tabs {
    display: flex;
    gap: 8px;
    justify-content: center;
}

.filter-tab {
    padding: 12px 24px;
    border: none;
    border-radius: 4px;
    background-color: hsl(240, 15%, 30%);
    color: white;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
}

.filter-tab:hover {
    background-color: hsl(240, 15%, 35%);
}

.filter-tab.active {
    background-color: hsl(230, 100%, 69%);
    color: white;
}

.gallery {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 100%;
    max-width: 1080px;
    margin: 0 auto;
}

.gallery-item {
    border-radius: 12px;
    overflow: hidden;
}

.gallery-item.hidden {
    display: none;
}

.gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 12px;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
}

.mobile-gallery {
    display: none;
}

@media (orientation: portrait) {
    .content-container {
        padding: 0;
        max-width: none;
        margin: 0;
    }

    .header-title{
        display: none;     
    }
    
    main {
        height: calc(100dvh - 80px);
        overflow: auto;
        padding: 0;
    }    

    .page-header {
        padding: 16px;
        margin-bottom: 0;
        max-width: none;
        margin-left: 0;
        margin-right: 0;
    }

    .filter-tabs {
        justify-content: center;
        overflow-x: none;
        padding-bottom: 8px;
        gap: 8px;
    }

    .filter-tab {
        padding: 8px 16px;
        font-size: 0.9rem;
        white-space: nowrap;
        flex-shrink: 0;
    }

    .gallery {
        max-width: none;
        margin: 0;
        gap: 16px;
        padding: 0 0 2em 0;
    }

    .gallery-item {
        height: 50vh;
        border-radius: 0;
        margin: 0 16px;
    }

    .gallery-item img {
        border-radius: 12px;
    }

    .mobile-gallery {
        display: none;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const filterTabs = document.querySelectorAll('.filter-tab');
    const galleryItems = document.querySelectorAll('.gallery-item');

    function filterGallery(category) {
        galleryItems.forEach(item => {
            if (category === 'todas' || item.dataset.category === category) {
                item.classList.remove('hidden');
                item.style.display = 'block';
            } else {
                item.classList.add('hidden');
                item.style.display = 'none';
            }
        });
    }

    function updateActiveTab(activeTab) {
        filterTabs.forEach(tab => {
            tab.classList.remove('active');
        });
        activeTab.classList.add('active');
    }

    filterTabs.forEach(tab => {
        tab.addEventListener('click', function() {
            const filter = this.dataset.filter;
            updateActiveTab(this);
            filterGallery(filter);
        });
    });

    // Initialize with "Todas" selected
    filterGallery('todas');
});
</script>

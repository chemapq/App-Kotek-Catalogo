---
import Layout from "../layouts/Layout.astro";
---


<Layout title="Renders de Exterior">
    <main>
        <section>
			<div class="imageWrapper">

					<!-- fill with SVG areas -->
					<svg viewBox="0 0 100 100" class='image-area image-area--orange-1'>
						<path class="test-path" d="m 496.552 299.646 l 49.903 4.238 l 0.161 60.767 l -50.357 -3.264 z m 77.912 7.626 l 120.074 10.823 l 0.004 57.504 l -120.195 -8.295 z m 145.488 12.459 l 44.573 4.659 l 0.173 57.423 l -44.726 -3.066 z m 69.629 6.613 l 43.908 3.378 l -0.52 56.899 l -43.648 -2.858 z m 66.252 6.236 l 117.176 9.873 l 0.52 55.34 l -117.696 -9.873 z"></path>
					</svg>
					<!-- -->
					
					<img src="/exterior-1.jpg"/>
			</div>
			
        </section>
    </main>
</Layout>



<style>
	main {
		margin: 0;
		padding: 0;
		width: 100%;
		background-color: white;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin: 0;
		padding: 0;
	}
	section{
		background-color: #F2F2F2;
		height: calc(100vh - 48px);
		margin: 24px;
		border-radius: 12px;
		background-position: 50% 70%;
		overflow: hidden;
	}
.imageWrapper {
  width: 1000px;
  position: relative;
}

	.imageWrapper img {
	width:100%; height:100%;
	object-fit: contain;
	}

.image-area {
	opacity: 1;
  position: absolute;
  fill: red;
  top: 0%;
  left: 0%;
  transition: .4s;
  cursor: pointer;
}

.image-area:hover {
	fill: red;
}

.image-area--orange-1 {
  /* sizes should be in percentages */
  width: 21%;
  height: 18%;
}

.image-container {
  width: 100%;
  height: 100%;
}
.masked-image {
  width: 100%;
  height: 100%;
}

</style>

---
import Layout from "../layouts/Layout.astro";
const {values} = Astro.props
const {imageSource, imageAlt, cocina, aseo, salon, exterior, cocina2, bodega2, bodega, despacho, dormitorio2, dormitorio, next, prev} = values
---


<Layout title="Renders de Interior">
    <main>
        <section class="gallery">
            <a class="arrow left" href=`/galeria/${prev}`>
				&lt 
		   </a>
		   <img src={imageSource} alt={imageAlt}>
		   <a class="arrow right" href=`/galeria/${next}`>
			   &gt
		   </a>
		   <footer class="dots-footer">
				<ul class="dotstyle dotstyle-fillup">
					<li class = {aseo}><a href="/galeria/aseo">Aseo</a></li>
					<li class = {bodega2}><a href="/galeria/bodega-2">Bodega</a></li>
					<li class = {bodega}><a href="/galeria/bodega">Bodega</a></li>
					<li class = {cocina2}><a href="/galeria/cocina-2">Cocina</a></li>
					<li class = {cocina}><a href="/galeria/cocina">Cocina</a></li>
					<li class = {despacho}><a href="/galeria/despacho">Despacho</a></li>
					<li class = {dormitorio2}><a href="/galeria/dormitorio-2">Dormitorio 2</a></li>
					<li class = {dormitorio}><a href="/galeria/dormitorio">Dormitorio</a></li>
					<li class = {exterior}><a href="/galeria/exterior">Exterior</a></li>
					<li class = {salon}><a href="/galeria/salon">Salon</a></li>

				</ul>
			</footer>
        </section>
		<section class="mobile-gallery">
			<img src="/cocina.webp" alt="Render de la cocina"><img src="/aseo.webp" alt="Render del aseo"><img src="/salon.webp" alt="Render del salÃ³n"><img src="/exterior1.webp" alt="Render del exterior"><img src="/cocina-2.webp" alt="Render de la cocina"><img src="/bodega-2.webp" alt="Render de la bodega"><img src="/bodega.webp" alt="Render de la bodega"><img src="/despacho.webp" alt="Render del despacho"><img src="/dormitorio-2.webp" alt="Render del dormitorio 2"><img src="/dormitorio1.webp" alt="Render del dormitorio 1">
		</section>
    </main>
</Layout>



<style>
	body{
		overflow: hidden;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin: 0;
		padding: 0;
	}
	.gallery{
		height: calc(100vh - 48px);
		margin: 24px;
		border-radius: 12px;
		background-position: 50% 70%;
		display: flex;
		align-items: center;
		justify-content: space-between;
		position: relative;
		overflow: hidden;
	}
	.mobile-gallery{
		display: none;
	}
	img{
		width: 100%;
		border-radius: 12px;
		-webkit-touch-callout : none;     /* iOS Safari */
  		-webkit-user-select   : none;     /* Chrome/Safari/Opera */
 		-khtml-user-select    : none;     /* Konqueror */
 		-moz-user-select      : none;     /* Firefox */
  		-ms-user-select       : none;     /* Internet Explorer/Edge */
	}
	.arrow{
		font-size: 3rem;
		text-decoration: none;
		color: #262633;
		position: absolute;
		background-color: hsl(240, 15%, 87%);
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		width: 3rem;
		height: 3rem;
		font-weight: 200;
		-webkit-touch-callout : none;     /* iOS Safari */
  		-webkit-user-select   : none;     /* Chrome/Safari/Opera */
 		-khtml-user-select    : none;     /* Konqueror */
 		-moz-user-select      : none;     /* Firefox */
  		-ms-user-select       : none;     /* Internet Explorer/Edge */
	}
	.right{
		right: 8px;
	}
	.left{
		left: 8px;
	}
	@media (orientation: portrait) {
		.gallery{
			display: none;
		}
		.mobile-gallery{
			padding-top: 32px;
			display: flex;
			flex-direction: column;
			gap: 32px;
			overflow: scroll;
			height: calc(100dvh - 80px);
		}
	}

	
	


</style>

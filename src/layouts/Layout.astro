---
import ViewTransitions from 'astro/components/ViewTransitions.astro';
interface Props {
	title: string;
}
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Tu app para tener toda la información comercial inmobiliaria en un solo lugar." />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#ffffff">
		<meta name="generator" content={Astro.generator} />
		<link
    		rel="preload"
   			href="/fonts/Poppins-Regular.ttf"
    		as="font"
    		type="font/truetype"
    		crossorigin
  		/>
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<nav transition:animate="none" class="fixed-navbar">
			<h1 class="logo">tu logo<span class="dot">.</span></h1>
			<ul class="icon-list">
				<li class="navlist">
					
					<a href="/" class={ currentPath === "" ? "active navlink" : "navlink"}>
						<svg width="16px" height="16px" viewBox="0 0 24 24" fill="#FFF" xmlns="http://www.w3.org/2000/svg">

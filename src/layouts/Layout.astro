	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		overflow: hidden;
	}
	html {
		background-color: white;
		font-family: "Poppins", sans-serif;
  		font-weight: 400;
  		font-style: normal;
	}
	main {
		margin: 0;
		padding: 0;
		width: 100%;
		background-color: hsl(240, 15%, 17%);

	}
	code {
		font-family:
